<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/container_investment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingEnd="@dimen/dimen_32dp"
            android:paddingLeft="@dimen/dimen_32dp"
            android:paddingRight="@dimen/dimen_32dp"
            android:paddingStart="@dimen/dimen_32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- View: header -->
            <include layout="@layout/view_investiments_header"/>

            <!-- View: risk factor -->
            <include layout="@layout/view_risk_factor_bar" />

            <!-- View: periods -->
            <include layout="@layout/view_periods_cdi" />

            <!-- List: Details -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"/>

            <!-- Call to action -->
            <Button
                android:id="@+id/invest"
                android:background="@drawable/call_to_action_background"
                android:fontFamily="@font/dinpro_medium"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_32dp"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="@string/invest" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>
    <ImageView
        android:id="@+id/TP_image"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_marginTop="35.0dp"
        android:src="@drawable/ico_download"
        android:visibility="visible"
        />


    <Button
        android:id="@+id/TP_buttom"
        style="@style/buttonCircle"
        android:layout_marginTop="35.0dp"
        android:text="Enviar"

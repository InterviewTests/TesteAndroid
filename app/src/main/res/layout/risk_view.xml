<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/risk_view_lin_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/risk_view_risk_1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight=".2"
            android:background="@drawable/shape_risk_view_first" />

        <View
            android:id="@+id/risk_view_risk_2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight=".2"
            android:background="@color/risk_2" />

        <View
            android:id="@+id/risk_view_risk_3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight=".2"
            android:background="@color/risk_3" />

        <View
            android:id="@+id/risk_view_risk_4"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight=".2"
            android:background="@color/risk_4" />

        <View
            android:id="@+id/risk_view_risk_5"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight=".2"
            android:background="@drawable/shape_risk_view_last" />
    </LinearLayout>

    <TextView
        android:id="@+id/risk_view_tvw_indicator"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/dinneuzeitgroteskstdlight"
        android:scaleX="2"
        android:text="^"
        android:textColor="#7D7A77"
        app:layout_constraintBottom_toTopOf="@+id/risk_view_lin_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        tools:ignore="HardcodedText" />
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <include
        android:id="@+id/form_toolbar"
        layout="@layout/toolbar" />

    <android.support.v4.view.ViewPager
        android:id="@+id/form_view_page"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/form_btn_contacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/form_toolbar"
        app:layout_constraintVertical_bias="0.0">

    </android.support.v4.view.ViewPager>


    <Button
        android:id="@+id/form_btn_investment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkRed"
        android:padding="18dp"
        android:text="Investimento"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/form_btn_contacts"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/form_btn_contacts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#DD0000"
        android:padding="18dp"
        android:text="Contato"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/form_btn_investment" />


</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/vRiskIndicator_clRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@id/vRiskIndicator_llArrows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@id/vRiskIndicator_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorLightGrey"
            tools:text="Risco do investimento"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@id/vRiskIndicator_ivLower"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>

            <ImageView
                android:id="@id/vRiskIndicator_ivLow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>

            <ImageView
                android:id="@id/vRiskIndicator_ivMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>

            <ImageView
                android:id="@id/vRiskIndicator_ivHigh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>

            <ImageView
                android:id="@id/vRiskIndicator_ivHigher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@id/vRiskIndicator_llColors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <View
                android:id="@id/vRiskIndicator_vLower"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="0.2"
                android:background="@color/colorLightGreen"/>

            <View
                android:id="@id/vRiskIndicator_vLow"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="0.2"
                android:background="@color/colorGreen"/>

            <View
                android:id="@id/vRiskIndicator_vMedium"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="0.2"
                android:background="@color/colorYellow"/>

            <View
                android:id="@id/vRiskIndicator_vHigh"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="0.2"
                android:background="@color/colorOrange"/>

            <View
                android:id="@id/vRiskIndicator_vHigher"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="0.2"
                android:background="@color/colorAccent"/>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
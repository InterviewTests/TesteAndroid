<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/custom_risk_view_cons_scale_risk_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/custom_risk_view_cons_scale_risk_2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/custom_risk_view_img_scale_risk_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_risk_index"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/custom_risk_view_vw_scale_risk_1"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/risk_1"
            app:layout_constraintTop_toBottomOf="@+id/custom_risk_view_img_scale_risk_1" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/custom_risk_view_cons_scale_risk_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/custom_risk_view_cons_scale_risk_3"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/custom_risk_view_cons_scale_risk_1"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/custom_risk_view_img_scale_risk_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_risk_index"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <View
            android:id="@+id/custom_risk_view_vw_scale_risk_2"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/risk_2"
            app:layout_constraintTop_toBottomOf="@+id/custom_risk_view_img_scale_risk_2"
            tools:layout_height="14dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/custom_risk_view_cons_scale_risk_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/custom_risk_view_cons_scale_risk_4"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/custom_risk_view_cons_scale_risk_2"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/custom_risk_view_img_scale_risk_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_risk_index"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/custom_risk_view_vw_scale_risk_3"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/risk_3"
            app:layout_constraintTop_toBottomOf="@+id/custom_risk_view_img_scale_risk_3" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/custom_risk_view_cons_scale_risk_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/custom_risk_view_cons_scale_risk_5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/custom_risk_view_cons_scale_risk_3"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/custom_risk_view_img_scale_risk_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_risk_index"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/custom_risk_view_vw_scale_risk_4"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/risk_4"
            app:layout_constraintTop_toBottomOf="@+id/custom_risk_view_img_scale_risk_4" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/custom_risk_view_cons_scale_risk_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/custom_risk_view_cons_scale_risk_4"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/custom_risk_view_img_scale_risk_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_risk_index"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/custom_risk_view_vw_scale_risk_5"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/risk_5"
            app:layout_constraintTop_toBottomOf="@+id/custom_risk_view_img_scale_risk_5" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
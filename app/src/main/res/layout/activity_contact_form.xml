<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp"
        >

        <LinearLayout
            android:id="@+id/lnBoxTop"
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:padding="16dp"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- INICIO FORM -->

            <TextView
                android:id="@+id/lbArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:hint="CONTATO AQUI"
                android:textSize="16dp"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/etFullNameHint"
                android:layout_width="match_parent"
                android:textColorHint="@color/colorTextNormal"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/etFullName"
                    android:text=""
                    android:hint="NOME"
                    android:inputType="textPersonName"
                    style="@style/editTextNormal" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/etEmailHint"
                android:layout_width="match_parent"
                android:textColorHint="@color/colorTextNormal"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etEmail"
                    android:text=""
                    android:hint="EMAIL"
                    android:inputType="textEmailAddress"
                    style="@style/editTextNormal" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/etPhoneHint"
                android:layout_width="match_parent"
                android:textColorHint="@color/colorTextNormal"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etPhone"
                    android:text=""
                    android:hint="TELEFONE"
                    android:inputType="phone"
                    style="@style/editTextNormal" />

            </android.support.design.widget.TextInputLayout>

               <!--
                android:checked="true"
                android:buttonTint="@color/colorAccent"
                 android:button="@null"
                android:background="?android:attr/listChoiceIndicatorMultiple"

               -->

            <CheckBox
                android:id="@+id/cbEmailAccept"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="35.0dp"
                android:hint="SALVAR EMAIL"
                android:paddingLeft="10dp"
                style="@style/checkBoxNormal"

                android:text=""

                />

            <Button
                android:id="@+id/btSend"
                style="@style/buttonCircle"
                android:text="Enviar"
                />

            <!-- FINAL FORM -->

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_bottom" />

</android.support.constraint.ConstraintLayout>
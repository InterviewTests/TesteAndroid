<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="RedFireTheme" parent="Theme.AppCompat.Light">

        <item name="android:fontFamily">@font/dmedium</item>

        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">#ffffff</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#ffe100</item>
        <item name="colorControlHighlight">#ffe100</item>

        <item name="android:windowTranslucentStatus">true</item>
        <!-- toolbar_bottom -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="editTextBackground">@color/colorAccent</item>

    </style>



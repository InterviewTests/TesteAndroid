<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="regular" parent="android:Widget.TextView">
        <item name="android:fontFamily">font/dinpro_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="regular_28" parent="android:Widget.TextView">
        <item name="android:fontFamily">font/dinpro_regular</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="regular_14" parent="android:Widget.TextView">
        <item name="android:fontFamily">font/dinpro_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="regular_14_white" parent="android:Widget.TextView">
        <item name="android:fontFamily">font/dinpro_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="regular_14_light_grey" parent="android:Widget.TextView">
        <item name="android:fontFamily">font/dinpro_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="ButtonConfig" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="light_16_light_grey" parent="android:Widget.TextView">
        <item name="android:fontFamily">font/dinpro_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Progress" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>

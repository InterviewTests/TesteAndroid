<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/gray</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/lightBlack</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/gray</item>
        <item name="colorControlHighlight">@color/gray</item>

        <item name="android:textColorHighlight">@color/gray</item>
        <item name="android:textColorLink">@color/gray</item>
    </style>

    <style name="Tab" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/darkRed</item>
    </style>

    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/gray</item>
        <item name="android:colorControlActivated">@color/red</item>
        <item name="android:colorControlHighlight">@color/red</item>
        <item name="android:textSize">16sp</item>
    </style>



</resources>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorSecondary" tools:ignore="NewApi">@color/black</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textCursorDrawable">@color/colorAccent</item><!-- Text field cursor color -->
        <item name="colorControlActivated">@color/colorAccent</item><!-- Text field underline color -->
    </style>

    <!-- Change checkbox color -->
    <style name="CheckboxStatus" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal" tools:ignore="NewApi">@color/gray</item>
        <item name="android:colorControlActivated" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

</resources>

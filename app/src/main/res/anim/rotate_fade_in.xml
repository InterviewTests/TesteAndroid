<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" android:duration="150" android:fillAfter="true">

    <rotate
        android:fromDegrees="-180"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"
        android:pivotX="0%"
        android:pivotY="0%"
        android:toDegrees="0" />

    <translate
        android:fromXDelta="-25"
        android:toXDelta="0"
        android:fromYDelta="25"
        android:toYDelta="0"/>

    <alpha
        android:fromAlpha="0.0"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"
        android:toAlpha="1.0" />

</set>
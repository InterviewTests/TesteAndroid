<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <stroke android:width="1dp" android:color="@android:color/transparent" />
            <solid android:color="@android:color/transparent" />

        </shape>
    </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
    <item android:top="12dp" >
        <shape
            android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <stroke android:width="1dp" android:color="@android:color/holo_red_dark" />
            <solid android:color="@android:color/holo_red_dark" />
        </shape>
    </item>

    <item
        android:top="0dp"
        android:bottom="25dp"
        android:left="20dp"
        android:right="20dp"
        android:drawable="@drawable/ic_arrow_down"
        android:gravity="top" />

</layer-list>
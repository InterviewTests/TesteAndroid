<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/santanderRed</item>
        <item name="colorPrimaryDark">@color/santanderDkRed</item>
        <item name="colorAccent">@color/santanderWhite</item>
    </style>

    <style name="titleTab" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/dinpro_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/txtRegular</item>
    </style>

    <style name="editTextTheme">
        <item name="colorControlNormal">@color/santanderLtGray</item>
        <item name="colorControlActivated">@color/santanderLtGray</item>
        <item name="colorControlHighlight">@color/santanderLtGray</item>
        <item name="android:textColorPrimary">@color/santanderGray</item>
        <item name="android:textColorSecondary">@color/santanderGray</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/santanderRed</item>
        <item name="android:textColorSecondary">@color/santanderLtGray</item>
    </style>

</resources>

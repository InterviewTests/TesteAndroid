<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/arrowRisk"
        android:layout_width="29dp"
        android:layout_height="11dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:rotation="0"
        android:scaleX="2"
        android:scaleY="1.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/riskTitle"
        app:srcCompat="@drawable/arrow" />


    <LinearLayout
        android:id="@+id/linearLayoutColors"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrowRisk">

        <View
            android:id="@+id/viewColors1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginHorizontal="1dp"
            android:layout_weight="1"
            android:background="@color/santanderRisk1"
            android:orientation="vertical" />

        <View
            android:id="@+id/viewColors2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginHorizontal="1dp"
            android:layout_weight="1"
            android:background="@color/santanderRisk2"
            android:orientation="vertical" />

        <View
            android:id="@+id/viewColors3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginHorizontal="1dp"
            android:layout_weight="1"
            android:background="@color/santanderRisk3"
            android:orientation="vertical" />

        <View
            android:id="@+id/viewColors4"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginHorizontal="1dp"
            android:layout_weight="1"
            android:background="@color/santanderRisk4"
            android:orientation="vertical" />

        <View
            android:id="@+id/viewColors5"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginHorizontal="1dp"
            android:layout_weight="1"
            android:background="@color/santanderRisk5"
            android:orientation="vertical" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
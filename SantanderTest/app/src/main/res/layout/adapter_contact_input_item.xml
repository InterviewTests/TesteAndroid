<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contact_item_input_layout">

    <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:hintEnabled="false" app:hintAnimationEnabled="false"
            app:helperTextEnabled="false" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/input_layout_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:fontFamily="@font/dinproregular"
        />
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>
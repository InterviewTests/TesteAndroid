<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/risk_selector_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/risk_bar_selector"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/risk_selector_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/risk_bar_selector"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/risk_selector_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/risk_bar_selector"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/risk_selector_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/risk_bar_selector"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/risk_selector_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/risk_bar_selector"
            android:layout_weight="1"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/risk_selected_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/risk_bar_one"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/risk_selected_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/risk_bar_two"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/risk_selected_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/risk_bar_three"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/risk_selected_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/risk_bar_four"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/risk_selected_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/risk_bar_five"
            android:layout_weight="1"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/risk_bar_one"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/risk_bar_two"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/risk_bar_three"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/risk_bar_four"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/risk_bar_five"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/dinproregular</item>
        <item name="textSize">@dimen/text_medium</item>
    </style>

    <style name="CheckBoxCustom" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ButtonCustom" parent="@android:style/Widget.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="fontFamily">@font/dinpromedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="LabelCustom" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grayacac</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextField" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gray7e7e</item>
    </style>

</resources>
